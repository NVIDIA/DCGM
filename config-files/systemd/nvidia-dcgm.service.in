[Unit]
Description=NVIDIA DCGM service
After=nvidia-gpu-reset.target
Wants=nvidia-gpu-reset.target

[Service]
User=root
PrivateTmp=false

Environment="DCGM_HOME_DIR=/var/log/nvidia-dcgm"

# systemd version 251 or later
# ExecStart=%Y/../../../@CMAKE_INSTALL_BINDIR@/nv-hostengine -n --service-account nvidia-dcgm

ExecStart=/usr/@CMAKE_INSTALL_BINDIR@/nv-hostengine -n --service-account nvidia-dcgm

Restart=on-abort

[Install]
Alias=dcgm.service
WantedBy=multi-user.target
